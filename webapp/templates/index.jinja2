{% extends "base.jinja2" %}

{% block content %}
    <div class="form-wrapper">
        <div class="logo">
            <img src="{{ url_for('static', filename="logo.png") }}" alt="logo">
        </div>
    </div>

{% for message in get_flashed_message() %}
<div class="alert alert-warning">
    <button
        type="button"
        class="close"
        data-dismiss="alert">
        x
    </button>
    {{ message }}
</div>
{% endfor %}

<h1>SIGN UP</h1>

<form method="POST" action="/registration">
    {{ form.csrf_token }}
</form>

